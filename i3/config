bar {
	status_command python3 /usr/lib/python3.6/site-packages/powerline/bindings/i3/powerline-i3.py
	font pango:Inconsolata-g, SauceCodePro Nerd Font Mono 12
    status_command i3blocks 
	i3bar_command i3bar -t
	strip_workspace_numbers yes
	separator_symbol "■"
#	output edp1
#	tray_output hdmi1
	tray_padding 0
	position top
	height $height

    colors {
        statusline         $white
        background         $transparent
        separator          $transparent

#                          border       background   text
        focused_workspace  $transparent $transparent $white
        inactive_workspace $transparent $transparent $darkwhite
        active_workspace   $transparent $transparent $darkwhite
        urgent_workspace   $darkred     $darkred     $transparent
        binding_mode       $darkred     $darkred     $transparent
    }
}

